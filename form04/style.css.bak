body {
    font-family: Arial;
    font-size: 11pt;
}

th {
    font-size: 16pt;
    background:	#ff6347;
    color:white;
}

td {
    padding: 5px;
}


input{
    border: 1px dotted rgb(43, 73, 47);
    padding: 5px ;
    background:  #f4a460;
    
}

input:focus{
    border: 1px solid rgb(94, 255, 0);
    background: white;
}

button {
    background: #ff6347;
    color: white;
    border: 5px;
    padding: 5px 20px;
}
table {

    padding: 100px;
    border-collapse:collapse;
    background: #f0e68c
}

textarea{
    background: lightGreen;
}

textarea:focus{
    background: white;
}

select{
    width: 100px;
}
